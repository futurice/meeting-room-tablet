<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">18pt</item>
    </style>

    <color name="CalendarDisabledColor">#4000</color>
    <color name="CalendarBorderColor">#ccc</color>
    <color name="CalendarTextColor">#000</color>
    <color name="CalendarResTextColor">#fff</color>
    <color name="StatusFreeColor">#529200</color>
    <color name="StatusReservedColor">#b24c4c</color>
    <color name="Transparent">#0000</color>
    <color name="CalendarMarkerReservedColor">#0066CC</color>
    <color name="CalendarMarkerFreeColor">#0000</color>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <color name="TextColor">#000</color>
    <color name="TimeSpanTextColor">#529200</color>

    <style name="TimeSpanTimeStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/TimeSpanTextColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DigitalClockStyle">
        <item name="android:textColor">@color/TimeSpanTextColor</item>
        <item name="android:textSize">64sp</item>
    </style>

    <color name="FutuLightGreen">#cbdeb2</color>
    <color name="ReserveBackground">#6698c655</color>
    <color name="ReserveLine">#a4cb80</color>
    <color name="TimeBarTickColor">#3333</color>
    <color name="ButtonTextNormal">#333</color>
    <color name="ButtonTextActive">#333</color>
    <color name="ButtonTextDisabled">#999</color>
    <color name="TextInfoColor">#666</color>
    <color name="CalendarWeekTextColor">#999</color>
    <color name="MenuButtonBackgroundColor">#005C99</color>
    <color name="MenuButtonPressedColor">#00436E</color>
    <color name="MenuButtonInactiveColor">#E3E3E9</color>

    <color name="TrafficLightFree">#4ccb00</color>
    <color name="TrafficLightYellow">#cee100</color>
    <color name="TrafficLightReserved">#de1f00</color>
    <color name="TrafficLightText">#fff</color>
    <color name="TrafficLightYellowButtonText">#becf00</color>
    <color name="TrafficLightYellowButtonPressed">#a0af00</color>
    <color name="TrafficLightGreenButtonPressed">#03a021</color>
    <color name="TrafficLightYellowButtonPressedText">#e4ec8c</color>
    <color name="TrafficLightGreenButtonPressedText">#98dd6f</color>
</resources>